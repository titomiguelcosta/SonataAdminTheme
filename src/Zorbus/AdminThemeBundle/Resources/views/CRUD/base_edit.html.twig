{% extends base_template %}

{% block title %}
    {% if admin.id(object) is not null %}
        {{ "title_edit"|trans({'%name%': admin.toString(object)|truncate(15) }, 'SonataAdminBundle') }}
    {% else %}
        {{ "title_create"|trans({}, 'SonataAdminBundle') }}
    {% endif %}
{% endblock%}

{% block navbar_title %}
    {{ block('title') }}
{% endblock %}

{% block actions %}
    <li>{% include 'ZorbusAdminThemeBundle:Button:show_button.html.twig' %}</li>
    <li>{% include 'ZorbusAdminThemeBundle:Button:history_button.html.twig' %}</li>
    <li>{% include 'ZorbusAdminThemeBundle:Button:acl_button.html.twig' %}</li>
    <li>{% include 'ZorbusAdminThemeBundle:Button:list_button.html.twig' %}</li>
    <li>{% include 'ZorbusAdminThemeBundle:Button:create_button.html.twig' %}</li>
{% endblock %}

{% block tab_menu %}{{ knp_menu_render(admin.sidemenu(action), {'currentClass' : 'active', 'template': admin_pool.getTemplate('tab_menu_template')}, 'twig') }}{% endblock %}

{% use 'ZorbusAdminThemeBundle:CRUD:base_edit_form.html.twig' with form as parentForm %}
{% import "ZorbusAdminThemeBundle:CRUD:base_edit_form_macro.html.twig" as form_helper %}

{% block form %}
    {{ block('parentForm') }}
{% endblock %}
